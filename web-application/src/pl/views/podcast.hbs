<div class="grid-x content">

    <div class="cell small-10 large-8 medium-10 large-offset-2 medium-offset-1 small-offset-1">

        <!--Pod-info section-->
        {{>podcast-information}}

        <div class="grid-x">
            <div class="cell large-6 headers">
                <h1>Reviews</h1>
            </div>
            <div class="cell large-6">
                <a href="/podcast/{{model.collectionId}}/write-review" class="buttons">Write a review</a>
            </div>
        </div>

        <div class="grid-x reviews">
            <div class="cell large-4">
                <h2>Review1</h2>
            </div>
            <div class="cell large-4">
                <h2>Review2</h2>
            </div>
            <div class="cell large-4">
                <h2>Review3</h2>
            </div>
        </div>
        <div class="grid-x">
            <div class="cell large-12">
                <button class="buttons">View more reviews</button>
            </div>
        </div>


        <div class="grid-x">
            <div class="cell large-12">
                <h1>Similar Podcasts</h1>
            </div>
            <section id="slideshow" class="cell small-12 center">
                <ul id="podcast-section" class="slick">
                    {{#each model.podcastsInSameCategory}}
                    <li>
                        {{>podcast-figure}}
                    </li>
                    {{/each}}
                </ul>
            </section>
        </div>
    </div>
</div>