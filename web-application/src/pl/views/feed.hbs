<div class="grid-x">

    <div class="cell small-12 medium-10 large-8 small-offset-0 medium-offset-1 large-offset-2">
        <ul id="pod-links" class="menu align-center">
            <li><a id="your-podcasts-link" href="#your-podcasts">Your podcasts</a></li>
            <li><a id="want-to-listen-link" href="#want-to-listen">Want to listen</a></li>
            <li><a id="recommendations-link" href="#recommendations">Recommendations</a></li>
            <li><a id="friend-favourites-link" href="#friend-favourites">Friend Favourites</a></li>
        </ul>
    </div>


    <div id="podcast-section" class="cell small-10 medium-8 large-8 small-offset-1 medium-offset-2 large-offset-2">

        <section id="your-podcasts" class="cell center">
            <div class="grid-x">
                <div class="cell medium-8 medium-offset-2">
                    <ul>
                        {{#if model.playlists}}
                        {{#each model.playlists}}
                        <li>
                            <h2 class="sub-text">{{playlistName}}</h2>
                            <a href="/{{playlistName}}/edit">edit list</a>
                            <section id="" class="cell small-8 center">Â´
                                <ul id="podcast-section" class="slick">
                                    {{#each podcastInfo}}
                                    <li>
                                        <figure id="podcast-holder">
                                            <a href="../../podcast/{{this.collectionId}}"><img id="podcast-image" class="podcast-size-210"
                                                    src="{{this.artworkUrl600}}"></a>
                                        </figure>
                                    </li>
                                    {{/each}}
                                </ul>
                            </section>
                        </li>
                        {{/each}}
                        {{else}}
                        <p>You dont have any playlists</p>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </section>

        <section id="want-to-listen" class="cell center">
            <h1>Want to listen</h1>
        </section>

        <section id="recommendations" class="cell center">
            <h1> Recommendations</h1>
        </section>

        <section id="friend-favourites" class="cell center">
            <h1>Friend Favourites</h1>
        </section>

    </div>
</div>

<div class="grid-x">
    <div class="cell small-10 medium-8 large-6 small-offset-1 medium-offset-2 large-offset-3">
        <h1 class="head-text">Updates</h1>
    </div>
    <div class="update-feed cell small-10 medium-8 large-6 small-offset-1 medium-offset-2 large-offset-3">
        <div class="innerbox">
            <h1> NICE</h1>

        </div>

    </div>

</div>