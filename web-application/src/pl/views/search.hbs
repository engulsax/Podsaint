<div class="grid-x">
    <div class="cell medium-8 medium-offset-2">
        <h1 class="head-category">{{model.headText}}</h1>
        {{>search-field}}
    </div>
</div>
<div class="grid-x">
    <section class="cell medium-8 medium-offset-2">
        {{#if model.result}}
        <h1 class="head-category">Results</h1>
        <ul id="podcast-search-results">
            {{#each model.result}}
            <li>
                {{>podcast-figure}}
            </li>
            {{/each}}
        </ul>
        {{else}}
        <p class="no-result">...No result found...</p>
        {{/if}}
    </section>
</div>