        crossorigin="anonymous">

    <!-- Compressed JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/foundation-sites@6.4.3/dist/js/foundation.min.js"
        integrity="sha256-mRYlCu5EG+ouD07WxLF8v4ZAZYCA6WrmdIXyn1Bv9Vk= sha384-KzKofw4qqetd3kvuQ5AdapWPqV1ZI+CnfyfEwZQgPk8poOLWaabfgJOfmW7uI+AV sha512-0gHfaMkY+Do568TgjJC2iMAV0dQlY4NqbeZ4pr9lVUTXQzKu8qceyd6wg/3Uql9qA2+3X5NHv3IMb05wb387rA=="
        crossorigin="anonymous"></script>

    <!--Styling CSS -->
    <link rel="stylesheet" href="/css/styling.css" type="text/css">
    <link rel="stylesheet" href="/css/sign-pop-up.css" type="text/css">
    <link rel="stylesheet" href="/css/categories-pop-up.css" type="text/css">
    <link rel="stylesheet" href="/css/podholder.css" type="text/css">

    <!-- Podsaint JavaScript -->
    <script src="/js/sign-up-pop-up.js"></script>
    <script src="/js/sign-in-pop-up.js"></script>
    <script src="/js/categories-pop-up.js"></script>
    <script src="/js/search-option.js"></script>
    

    <!-- Icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--meta http-equiv="X-UA-Compatible" content="ie=edge"-->

    <title>Podsaint</title>
</head>

<body>
    <header id="header">
        <div class="grid-x">
            <div class="cell">
                <div id="logo">
                    <a href="/"><img id="logo-icon" src="/images/Podsaint_logo.png"></a>
                    <div id="logo-text">Podsaint</div>
                </div>
                <nav id="menu">
                    <ul>
                        <li>
                            <form method="GET" action="/search" >
                                <input name="searchText" class="search" type="text" placeholder="Search...">
                            </form>
                        </li>
                        <li>
                            <a id="sign-in" href="#">Sign In</a>
                        </li>
                    </ul>
                    <a href="#" id="categories-button">Categories &#x25BC;</a>
                </nav>
            </div>
        </div>
        <div class="grid-x">
            <div id="categories-content" class="cell">
                <ul>
                    {{#each model.categories}}
                    <li><a href="/category/{{id}}">{{category}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </header>
    <main>
        {{{body}}}
        {{>sign-in-pop-up}}
    </main>
    <footer id="footer">

    </footer>
</body>

</html>