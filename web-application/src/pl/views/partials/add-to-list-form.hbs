<form action="/podcast/{{collectionId}}/add-to-playlist" method="POST">
   <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <h2>Add to list</h2>
    <label for="list">Choose a playlist:</label>
    <select class= search id="podcast-lists" name="playlist">
        {{#each userPlaylists}}
            <option value="{{id}}">{{playlist_name}}</option>
        {{/each}}
    </select>
    <input id="add-to-list-btn" class="button podsaint-button" type="submit" value="ADD">
</form>
