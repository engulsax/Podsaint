<form method="GET" id="search-form" action="/search/{{model.id}}">
    <input type="text" name="searchText" placeholder="Search for podcast in {{model.category}}...">
    <div id="options">
        <fieldset id="main-field" class="fieldset">
            <legend>Search on:</legend>
            <div class="grid-x">
                <div id="choose-search">
                    <a id="podsaint-search-button" class="button podsaint-button">Podsaint</a>
                    <a id="itunes-search-button" class="button podsaint-button">Itunes</a>
                </div>
            </div>
            <section id="podsaint-search">
                <div class="grid-x">
                   
                </div>
            </section>
            <section id="itunes-search">
                <div class="grid-x">
                    {{>search-options-itunes}}
                </div>
            </section>
        </fieldset>
    </div>
</form>