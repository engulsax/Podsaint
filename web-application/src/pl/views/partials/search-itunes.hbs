<form id="itunes-search" method="GET" id="search-form" action="/search/itunes/{{model.id}}">
    <fieldset id="main-field" class="fieldset">
        <input type="text" name="searchText" placeholder="Search for podcast in {{model.category}}...">
        <div id="options">
            <div class="grid-x">
                <div class="cell small-6">
                    <label>
                        Choose category:
                        <select name="category">
                            <option value="all">All</option>
                            {{#if model.id}}
                            {{#each model.subCategories}}
                            <option value="{{id}}">{{category}}</option>
                            {{/each}}
                            {{else}}
                            {{#each model.categories}}
                            <option value="{{id}}">{{category}}</option>
                            {{/each}}
                            {{/if}}
                        </select>
                    </label>
                </div>
            </div>
    </fieldset>
</form>