<form id="itunes-search" method="GET" id="search-form" action="/search/itunes/{{id}}">
    <fieldset id="main-field" class="fieldset">
        {{#if category}}
              <input type="text" name="searchText" placeholder="Search for podcast in {{category}}..." value="{{prevSearchText}}">
        {{else}}
            <input type="text" name="searchText" placeholder="Search for podcast on itunes..." value="{{prevSearchText}}">
        {{/if}}
        <div id="options">
            <div class="grid-x">
                <div class="cell small-6">
                    <label>
                        Choose category:
                        <select name="category">
                            {{#if id}}
                            <option value="all">{{category}}</option>
                            {{#each subCategories}}
                            <option value="{{id}}">{{category}}</option>
                            {{/each}}
                            {{else}}
                            <option value="all">All</option>
                            {{#each categories}}
                            <option value="{{id}}">{{category}}</option>
                            {{/each}}
                            {{/if}}
                        </select>
                    </label>
                </div>
            </div>
    </fieldset>
</form>