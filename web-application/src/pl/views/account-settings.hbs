
<div class="grid-x content">
    <div class="cell small-10 medium-8 large-4 small-offset-1 medium-offset-2 large-offset-4">
        
        <section class="content">
            <h2>Update your email address</h2>
            <form class="margin-top" action="/account-settings/update-email" method="POST">
                <label>New email
                    <input class="search" id="new-email" type="email" name="newEmail">
                </label>
                <p>{{inputError.passwordLengthError}}</p>        
                <label>Confirm email
                    <input class="search" id="confirm-new-email" type="email" name="confirmEmail">
                </label>
                <p>{{inputError.confirmedEmailLengthError}}</p>
                <P>{{inputError.emailMatchError}}</P>
                <p>{{inputError.emailUndefinedError}}</p>

                <input id="" class="button podsaint-button" type="submit" value="UPDATE EMAIL ADDRESS">
            </form>
        </section>

        <section class="content">
            <h2>Update your password</h2>
            <form class="margin-top" action="/account-settings/update-passsword"method="POST">
                <label>New password
                    <input class="search" id="new-password" type="password" name="newPassword">
                </label>
                <p>{{inputError.passwordLengthError}}</p>
                <label>Confirm New password
                    <input class="search" id="confirm-new-password" type="password" name="confimPassword">
                </label>
                <p>{{inputError.confirmedPasswordLengthError}}</p>
                <p>{{inputError.passwordMatchError}}</p>
                <p>{{inputError.passwordUndefinedError}}</p>
                <input id="" class="button podsaint-button" type="submit" value="UPDATE PASSWORD">
            </form>
        </section>

        <section class="content">
            <h2>Delete Account</h2>
            <p>Warning! This action cant be undone.</p>
            <form class="margin-top" action="/account-settings/delete-account" method="POST">
                <input id="delete-account-btn" class="button podsaint-button" type="submit" value="DELETE ACCOUNT">
            </form>
        </section>
    </div>
</div>
       
    