<div class="grid-x content">

    <div class="cell small-10 large-8 medium-10 large-offset-2 medium-offset-1 small-offset-1">

        <!--Pod-info section-->
        {{>podcast-information}}


        <div class="cell large-12">
            <h2>Write a review</h2>
        </div>
        
        <form action="" method="POST">   
            <div id="information-holder">
                <div class="grid-x">
                    <div class="cell large-6 medium-12 small-12">
                        <div class="grid-x">
                            <div class="cell large-6 center">
                                <p>Production quality:</p>
                            </div>

                            <div class="cell large-6">
                                
                                <fieldset class="star-div">
                                    <input class="star star-5-pq" id="star-5-pq" type="radio" name="productionQuality" value="1" />
                                    <label class="star star-5-pq" for="star-5-pq"></label>
                                    <input class="star star-4-pq" id="star-4-pq" type="radio" name="productionQuality" value="2" />
                                    <label class="star star-4-pq" for="star-4-pq"></label>
                                    <input class="star star-3-pq" id="star-3-pq" type="radio" name="productionQuality" value="3" />
                                    <label class="star star-3-pq" for="star-3-pq"></label>
                                    <input class="star star-2-pq" id="star-2-pq" type="radio" name="productionQuality" value="4" />
                                    <label class="star star-2-pq" for="star-2-pq"></label>
                                    <input class="star star-1-pq" id="star-1-pq" type="radio" name="productionQuality" value="5" />
                                    <label class="star star-1-pq" for="star-1-pq"></label>
                                </fieldset>
                             
                            </div>
                        </div>

                        <div class="grid-x">
                            <div class="cell large-6 center">
                                <p>Comedy Rating:</p>
                            </div>

                            <div class="cell large-6">
                                <div class="star-div">
                                    <fieldset class="star-div">
                                        <input class="star star-5-cr" id="star-5-cr" type="radio" name="comedyRating" value="1" />
                                        <label class="star star-5-cr" for="star-5-cr"></label>
                                        <input class="star star-4-cr" id="star-4-cr" type="radio" name="comedyRating" value="2" />
                                        <label class="star star-4-cr" for="star-4-cr"></label>
                                        <input class="star star-3-cr" id="star-3-cr" type="radio" name="comedyRating" value="3" />
                                        <label class="star star-3-cr" for="star-3-cr"></label>
                                        <input class="star star-2-cr" id="star-2-cr" type="radio" name="comedyRating" value="4" />
                                        <label class="star star-2-cr" for="star-2-cr"></label>
                                        <input class="star star-1-cr" id="star-1-cr" type="radio" name="comedyRating" value="5" />
                                        <label class="star star-1-cr" for="star-1-cr"></label>
                                    </fieldset>
                                
                                </div>

                            </div>
                        </div>

                        <div class="grid-x">
                            <div class="cell large-6 center">
                                <p>Seriousness Rating:</p>
                            </div>

                            <div class="cell large-6">
                            
                                <fieldset class="star-div">
                                    <input class="star star-5" id="star-5" type="radio" name="seriousnessRating" value="1" />
                                    <label class="star star-5" for="star-5"></label>
                                    <input class="star star-4" id="star-4" type="radio" name="seriousnessRating" value="2" />
                                    <label class="star star-4" for="star-4"></label>
                                    <input class="star star-3" id="star-3" type="radio" name="seriousnessRating" value="3" />
                                    <label class="star star-3" for="star-3"></label>
                                    <input class="star star-2" id="star-2" type="radio" name="seriousnessRating" value="4" />
                                    <label class="star star-2" for="star-2"></label>
                                    <input class="star star-1" id="star-1" type="radio" name="seriousnessRating" value="5" />
                                    <label class="star star-1" for="star-1"></label>
                                </fieldset>
                            
                            </div>
                        </div>

                        <div class="grid-x">
                            <div class="cell large-6 center">
                                <p>Fact Rating:</p>
                            </div>

                            <div class="cell large-6">
                                <fieldset class="star-div">
                                    <input class="star star-5-hr" id="star-5-hr" type="radio" name="factRating" value="1" />
                                    <label class="star star-5-hr" for="star-5-hr"></label>
                                    <input class="star star-4-hr" id="star-4-hr" type="radio" name="factRating" value="2" />
                                    <label class="star star-4-hr" for="star-4-hr"></label>
                                    <input class="star star-3-hr" id="star-3-hr" type="radio" name="factRating" value="3" />
                                    <label class="star star-3-hr" for="star-3-hr"></label>
                                    <input class="star star-2-hr" id="star-2-hr" type="radio" name="factRating" value="4" />
                                    <label class="star star-2-hr" for="star-2-hr"></label>
                                    <input class="star star-1-hr" id="star-1-hr" type="radio" name="factRating" value="5" />
                                    <label class="star star-1-hr" for="star-1-hr"></label>
                                </fieldset>
                            </div>
                        </div>

                        <div class="grid-x">
                            <div class="cell large-6 center">
                                <p>Overall Rating:</p>
                            </div>

                            <div class="cell large-6">
                                <fieldset class="star-div">
                                    <input class="star star-5-or" id="star-5-or" type="radio" name="overallRating" value="1" />
                                    <label class="star star-5-or" for="star-5-or"></label>
                                    <input class="star star-4-or" id="star-4-or" type="radio" name="overallRating" value="2" />
                                    <label class="star star-4-or" for="star-4-or"></label>
                                    <input class="star star-3-or" id="star-3-or" type="radio" name="overallRating" value="3" />
                                    <label class="star star-3-or" for="star-3-or"></label>
                                    <input class="star star-2-or" id="star-2-or" type="radio" name="overallRating" value="4" />
                                    <label class="star star-2-or" for="star-2-or"></label>
                                    <input class="star star-1-or" id="star-1-or" type="radio" name="overallRating" value="5" />
                                    <label class="star star-1-or" for="star-1-or"></label>
                                </fieldset>
                            </div>

                        </div>
                    </div>

                    <div class="cell large-6 medium-12 small-12">
                        <label>
                            Write a review
                            <textarea rows="5" cols="1" placeholder="None" name="reviewText"></textarea>
                        </label>
                        <div>
                            <input type="submit" class="button" value="Submit">
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>