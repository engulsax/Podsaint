<div class="grid-x content">

    <div class="cell small-10 large-8 medium-10 large-offset-2 medium-offset-1 small-offset-1">

        <!--Pod-info section-->
        {{>podcast-information}}


        <div class="cell large-12">
            <h2>Write a review</h2>
        </div>

        <form action="" method="POST">
            <div id="information-holder">


                <div class="gird-x cell checkgroup">

                    <span>
                        <input class="tone" id="comedy" type="radio" name="podcastTone" value="1">
                        <label class="tone" for="comedy" aria-label="drama face happy">
                            Comedy/Relaxed
                            <svg role="img">
                                <use xlink:href="/sprites/sprites.svg#funny">
                            </svg>
                        </label>
                    </span>

                    <span>
                        <input class="tone" id="drama" type="radio" name="podcastTone" value="0">
                        <label class="tone" for="drama" aria-label="drama face sad">
                            Drama/Serious
                            <svg role="img">
                                <use xlink:href="/sprites/sprites.svg#serious">
                            </svg>
                        </label>
                    </span>

                </div>

                <div class="grid-x cell">

                    <div class="cell small medium-4">

                        <div class="cell">
                            <p class="no-margin">Production Quality:</p>
                        </div>

                        <div class="cell">
                            <fieldset class="star-div">
                                <input class="star star-5-pq" id="star-5-pq" type="radio" name="productionQuality"
                                    value="5" />
                                <label class="star star-5-pq" for="star-5-pq"></label>
                                <input class="star star-4-pq" id="star-4-pq" type="radio" name="productionQuality"
                                    value="4" />
                                <label class="star star-4-pq" for="star-4-pq"></label>
                                <input class="star star-3-pq" id="star-3-pq" type="radio" name="productionQuality"
                                    value="3" />
                                <label class="star star-3-pq" for="star-3-pq"></label>
                                <input class="star star-2-pq" id="star-2-pq" type="radio" name="productionQuality"
                                    value="2" />
                                <label class="star star-2-pq" for="star-2-pq"></label>
                                <input class="star star-1-pq" id="star-1-pq" type="radio" name="productionQuality"
                                    value="1" />
                                <label class="star star-1-pq" for="star-1-pq"></label>
                            </fieldset>
                        </div>

                    </div>


                    <div class="cell small medium-4">

                        <div class="cell">
                            <p class="no-margin">Topic Relevance:</p>
                        </div>

                        <div class="cell">
                            <fieldset class="star-div">
                                <input class="star star-5-hr" id="star-5-hr" type="radio" name="topicRelevenceRating" value="5" />
                                <label class="star star-5-hr" for="star-5-hr"></label>
                                <input class="star star-4-hr" id="star-4-hr" type="radio" name="topicRelevenceRating" value="4" />
                                <label class="star star-4-hr" for="star-4-hr"></label>
                                <input class="star star-3-hr" id="star-3-hr" type="radio" name="topicRelevenceRating" value="3" />
                                <label class="star star-3-hr" for="star-3-hr"></label>
                                <input class="star star-2-hr" id="star-2-hr" type="radio" name="topicRelevenceRating" value="2" />
                                <label class="star star-2-hr" for="star-2-hr"></label>
                                <input class="star star-1-hr" id="star-1-hr" type="radio" name="topicRelevenceRating" value="1" />
                                <label class="star star-1-hr" for="star-1-hr"></label>
                            </fieldset>
                        </div>

                    </div>

                    <div class="cell small medium-4">

                        <div class="cell">
                            <p class="no-margin">Overall Rating:</p>
                        </div>

                        <div class="cell">
                            <fieldset class="star-div">
                                <input class="star star-5-or" id="star-5-or" type="radio" name="overallRating"
                                    value="5" />
                                <label class="star star-5-or" for="star-5-or"></label>
                                <input class="star star-4-or" id="star-4-or" type="radio" name="overallRating"
                                    value="4" />
                                <label class="star star-4-or" for="star-4-or"></label>
                                <input class="star star-3-or" id="star-3-or" type="radio" name="overallRating"
                                    value="3" />
                                <label class="star star-3-or" for="star-3-or"></label>
                                <input class="star star-2-or" id="star-2-or" type="radio" name="overallRating"
                                    value="2" />
                                <label class="star star-2-or" for="star-2-or"></label>
                                <input class="star star-1-or" id="star-1-or" type="radio" name="overallRating"
                                    value="1" />
                                <label class="star star-1-or" for="star-1-or"></label>
                            </fieldset>
                        </div>

                    </div>

                </div>

                <div class="grid-x cell">

                    <div class="cell small">
                        <label>
                            Write a review
                            <textarea rows="5" cols="2" placeholder="Write your review here..." name="reviewText"></textarea>
                        </label>
                        <div>
                            <input type="submit" class="podsaint-button button" value="Submit">
                        </div>
                    </div>

                </div>


            </div>

        </form>
    </div>
</div>